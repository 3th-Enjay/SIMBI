
{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "CommonJS",                      
    "lib": ["ES2020"],                        
    "outDir": "./dist",                       
    "rootDir": "./src",                        
    "strict": true,                         
    "esModuleInterop": true,                  
    "moduleResolution": "node",             
    "resolveJsonModule": true,                 
    "skipLibCheck": true,                      
    "forceConsistentCasingInFileNames": true,  
    "sourceMap": true,                         
    "declaration": true,                       
    "baseUrl": ".",                            
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["node"]                          
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
